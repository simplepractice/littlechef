# Kitchen
file_cache_path "{{node_work_path}}/cache"
cookbook_path {{cookbook_paths_list}}
role_path "{{node_work_path}}/roles"
data_bag_path "{{node_work_path}}/data_bags"
environment_path "{{node_work_path}}/environments"
environment "{{environment}}"
verify_api_cert true

# Connection
{% if http_proxy %}http_proxy "{{http_proxy}}"{% endif %}
{% if https_proxy %}https_proxy "{{https_proxy}}"{% endif %}
{% if no_proxy %}no_proxy "{{no_proxy}}"{% endif %}

# Output
verbose_logging {{verbose}}
add_formatter :{{formatter}}
require 'chef/formatters/simple'

